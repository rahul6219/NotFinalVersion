<%- include('includes/header') %>

<div class="container reg-page">
	<% if(locals.errors) { %>
		<% errors.forEach(function(error){%>
			<div class="alert alert-danger"><%= error.msg %></div>	
		<%})%>
	<%}%>
	<%- messages() %>
      <form method="post" action="/users/register" class="form-signin">
        <h2 class="form-signin-heading text-center">User Registration</h2>

        <label class="sr-only">Email</label>
        <input type="email" name="email" class="form-control" placeholder="Email" value="<%= (!!locals.email)?email:''%>" required autofocus><br>

        <label class="sr-only">Password</label>
        <input type="password" value="<%= (!!locals.password1)?password1:''%>" name="password1" class="form-control" placeholder="Password" required>

        <label class="sr-only">Password</label>
        <input type="password" value="<%= (!!locals.password2)?password2:''%>" name="password2" class="form-control" placeholder="Password Confirm" required>

        <p>Have an account already ? <a href="/users/login">login</a></p>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
      </form>

    </div>

<%- include('includes/footer') %>