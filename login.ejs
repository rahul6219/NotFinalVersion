        <h2 class="form-signin-heading text-center">User Login</h2>
        <label class="sr-only">Username</label>
        <input type="text" name="email" class="form-control" placeholder="User email" required autofocus><br>
        <label class="sr-onlys">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Password" required>
        <p>No Account ? <a href="/users/register">Register</a></p>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>
    </div>

